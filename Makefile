NAME = push_swap.a

SRCS =	push_swap_utils.c	\
		push_operators.c	\
		swap_operators.c	\
		rotate_operators.c	\

BONUS = 

OBJS := ${SRCS:.c=.o}

BONUSOBJS := ${BONUS:.c=.o}

CC = gcc

RM = rm -f

INC_DIR = includes

CFLAGS =  -Wall -Wextra -Werror

.c.o:
	@${CC} ${CFLAGS} -c -I ${INC_DIR} $< -o ${<:.c=.o}

all: $(NAME)
	@clear
